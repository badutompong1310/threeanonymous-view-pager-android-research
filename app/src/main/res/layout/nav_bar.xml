<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/linearLayoutTopNavBar"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/top_nav_bar_height"
    android:orientation="horizontal"
    android:background="@color/colorPrimary">

    <LinearLayout
        android:id="@+id/navButtonBack"
        android:layout_width="@dimen/top_nav_bar_height"
        android:layout_height="@dimen/top_nav_bar_height"
        android:gravity="center"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imageViewBack"
            android:layout_width="@dimen/item_nav_bar_size"
            android:layout_height="@dimen/item_nav_bar_size"
            android:src="@drawable/ic_arrow_back" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutTitle"
        android:layout_width="0dp"
        android:layout_height="@dimen/top_nav_bar_height"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/padding_title_nav_bar"
        android:paddingEnd="@dimen/padding_title_nav_bar">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pembelian"
            android:textSize="@dimen/nav_bar_title_size"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutCart"
        android:layout_width="@dimen/top_nav_bar_height"
        android:layout_height="@dimen/top_nav_bar_height"
        android:gravity="center">

        <ImageView
            android:id="@+id/imageViewCart"
            android:layout_width="@dimen/item_nav_bar_size"
            android:layout_height="@dimen/item_nav_bar_size"
            android:src="@drawable/ic_shopping_cart_white" />

    </LinearLayout>

</LinearLayout>